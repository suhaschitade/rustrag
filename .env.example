# RustRAG Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://rustrag_user:rustrag_password@localhost:5433/rustrag
DATABASE_MAX_CONNECTIONS=10

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4

# OpenAI Configuration (for embeddings and LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Vector Database Configuration (Qdrant - for future use)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379

# Logging Configuration
RUST_LOG=info,rustrag=debug
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_COST=12

# Authentication Configuration
AUTH_ENABLED=true
# Comma-separated list of additional static API keys (for backward compatibility)
STATIC_API_KEYS=

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=true
# Requests per hour for unauthenticated users (IP-based)
RATE_LIMIT_UNAUTHENTICATED_RPM=100
# Default requests per hour for authenticated users (can be overridden per API key)
RATE_LIMIT_AUTHENTICATED_RPM=1000

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,txt,md,doc,docx

# Performance Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_QUERY=10
EMBEDDING_BATCH_SIZE=100

# Development Configuration
DEBUG=true
ENABLE_CORS=true
